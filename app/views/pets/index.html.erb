<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Life time</th>
      <th>Hungry</th>
      <th>Clean</th>
      <th>Sleep</th>
      <th>Happiness</th>
      <th>Helthy</th>
      <th>Atual state</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.nome %></td>
        <td><%= pet.life_time %></td>
        <td><%= pet.hungry %></td>
        <td><%= pet.clean %></td>
        <td><%= pet.sleep %></td>
        <td><%= pet.happiness %></td>
        <td><%= pet.helthy %></td>
        <td><%= pet.atual_state %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

